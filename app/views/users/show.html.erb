  <% provide(:title, @user.name) %>
  <p style="color: green"><%= notice %></p>
  
  <div class="card">
      <div class="row no-gutters">
          <div class="col-auto">
              <img src="https://i.pravatar.cc/275" class="img-fluid" alt="">
          </div>
          <div class="col">
              <div class="card-block px-2">
                <h1 class="display-5 fw-bold pt-4"><%= @user.name %></h1>
                <p class="col-md-8 fs-4"><%= @user.email %></p>
                <div class="btn-group">
                  <%= button_to "Edit", edit_user_path(@user), method: :get, class: "btn btn-lg btn-secondary" %>
                  <%= button_to "Delete", @user, method: :delete, class: "btn btn-lg btn-danger mx-3" %>
                </div>
                <p class="my-4"><%= link_to "Back to users", users_path %></p>
              </div>
          </div>
      </div>
  </div>
  
